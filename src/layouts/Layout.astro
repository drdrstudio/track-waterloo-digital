---
export interface Props {
	title: string;
	description?: string;
}

const { title, description = "First-party attribution that actually works" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Google Tag Manager -->
		<script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
		new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
		j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
		'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
		})(window,document,'script','dataLayer','GTM-T3RVDSL');</script>
		<!-- End Google Tag Manager -->
		
		<!-- Fonts -->
		<link rel="stylesheet" href="https://use.typekit.net/kqv8nxr.css">
		
		<style>
			/* Custom Properties */
			:root {
				--color-primary: #7cd3d2;
				--color-secondary: #eed36b;
				--color-dark: #333;
				--color-text: #444;
				--font-primary: "neue-kabel", -apple-system, BlinkMacSystemFont, sans-serif;
				--font-body: Georgia, serif;
			}
			
			/* Base Styles */
			* {
				box-sizing: border-box;
				margin: 0;
				padding: 0;
			}
			
			body {
				font-family: var(--font-body);
				line-height: 1.6;
				color: var(--color-text);
				background: #fff;
			}
			
			/* Header */
			header {
				background: #fff;
				padding: 20px 0;
				border-bottom: 1px solid #eee;
				position: sticky;
				top: 0;
				z-index: 1000;
			}
			
			nav {
				display: flex;
				justify-content: space-between;
				align-items: center;
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 20px;
			}
			
			.logo {
				font-family: var(--font-primary);
				font-size: 2rem;
				font-weight: 700;
				color: var(--color-primary);
				text-decoration: none;
				text-transform: uppercase;
				letter-spacing: -2px;
			}
			
			.nav-links {
				display: flex;
				gap: 30px;
				list-style: none;
			}
			
			.nav-links a {
				font-family: var(--font-primary);
				color: var(--color-dark);
				text-decoration: none;
				font-weight: 500;
				font-size: 1.1rem;
				transition: color 0.3s ease;
			}
			
			.nav-links a:hover {
				color: var(--color-primary);
			}
			
			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 20px;
			}
			
			/* Typography */
			h1.head, h1 {
				font-family: var(--font-primary);
				font-weight: 700;
				font-style: normal;
				text-transform: uppercase;
				font-size: 4em;
				text-align: center;
				color: var(--color-primary);
				letter-spacing: -5px;
				line-height: 1;
				margin-bottom: 30px;
			}
			
			h2 {
				font-family: var(--font-primary);
				font-weight: 500;
				font-style: normal;
				color: var(--color-primary);
				font-size: 2.5em;
				margin-bottom: 20px;
				letter-spacing: -2px;
			}
			
			h3.subhead, h3 {
				font-family: var(--font-primary);
				font-weight: 700;
				font-style: normal;
				text-transform: uppercase;
				font-size: 1.8em;
				text-align: center;
				color: var(--color-primary);
				letter-spacing: -2px;
				margin-top: 0px;
			}
			
			h4 {
				font-family: var(--font-primary);
				font-weight: 600;
				color: var(--color-dark);
				font-size: 1.4em;
				margin-bottom: 15px;
			}
			
			p {
				font-family: Georgia, serif;
				color: #444;
				letter-spacing: 0px;
				margin-bottom: 1rem;
				font-size: 1.125rem;
				line-height: 1.8;
			}
			
			/* Color Classes */
			.blue { color: #7cd3d2; }
			.yellow { color: #eed36b; }
			.black { color: #000; }
			
			/* Buttons */
			.btn {
				display: inline-block;
				background: var(--color-primary);
				color: #fff;
				padding: 0.8em 2em;
				font-size: 1.2em;
				font-family: var(--font-primary);
				font-weight: 500;
				text-decoration: none;
				border: 0px;
				text-transform: lowercase;
				transition: all 0.3s ease;
				cursor: pointer;
				letter-spacing: -1px;
			}
			
			.btn:hover {
				background: #6ab9b8;
				transform: translateY(-2px);
			}
			
			.btn-secondary {
				background: var(--color-secondary);
				color: var(--color-dark);
			}
			
			.btn-secondary:hover {
				background: #d4bd5c;
			}
			
			/* Sections */
			.section {
				padding: 100px 0;
			}
			
			.section-alt {
				background: #f8f9fa;
			}
			
			.hero {
				background: #fff;
				text-align: center;
				padding: 120px 0;
				border-bottom: 3px solid var(--color-primary);
			}
			
			.hero h1 {
				margin-bottom: 30px;
			}
			
			.hero p {
				font-size: 1.4rem;
				max-width: 800px;
				margin: 0 auto 40px;
				color: var(--color-text);
			}
			
			/* Cards */
			.card {
				background: #fff;
				padding: 40px;
				border-radius: 0;
				box-shadow: 0 2px 10px rgba(124, 211, 210, 0.1);
				border-left: 4px solid var(--color-primary);
				margin-bottom: 30px;
			}
			
			.card h3 {
				text-align: left;
				margin-bottom: 20px;
			}
			
			/* Footer */
			footer {
				background: var(--color-dark);
				color: #fff;
				padding: 60px 0 30px;
				margin-top: 100px;
			}
			
			footer .container {
				text-align: center;
			}
			
			footer p {
				color: #fff;
				opacity: 0.8;
			}
			
			/* Grid Layouts */
			.grid {
				display: grid;
				gap: 40px;
				margin: 60px 0;
			}
			
			.grid-2 {
				grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
			}
			
			.grid-3 {
				grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
			}
			
			/* Feature Box */
			.feature-box {
				text-align: center;
				padding: 40px;
			}
			
			.feature-box h3 {
				margin-bottom: 20px;
			}
			
			/* Responsive */
			@media (max-width: 768px) {
				.nav-links {
					display: none;
				}
				
				h1 {
					font-size: 2.5em;
					letter-spacing: -3px;
				}
				
				h2 {
					font-size: 1.8em;
				}
				
				h3 {
					font-size: 1.4em;
				}
				
				.section {
					padding: 60px 0;
				}
				
				.hero {
					padding: 80px 0;
				}
				
				.grid-2,
				.grid-3 {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-T3RVDSL"
		height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		<!-- End Google Tag Manager (noscript) -->
		
		<header>
			<nav>
				<a href="/" class="logo">Waterloo Track</a>
				<ul class="nav-links">
					<li><a href="/for-agencies">For Agencies</a></li>
					<li><a href="/for-business-owners">For Businesses</a></li>
					<li><a href="/for-marketing-directors">For Directors</a></li>
					<li><a href="/contact">Get Audit</a></li>
				</ul>
			</nav>
		</header>
		
		<slot />
		
		<footer>
			<div class="container">
				<p>&copy; 2025 Waterloo Track. First-party attribution that actually works.</p>
				<p>Stop guessing. Start knowing.</p>
			</div>
		</footer>
	</body>
</html>