		new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
		j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
		'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
		})(window,document,'script','dataLayer','GTM-T3RVDSL');</script>
		<!-- End Google Tag Manager -->
		
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
		
		<style>
			/* Reset and Base */
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}
			
			:root {
				--color-primary: #7cd3d2;
				--color-secondary: #eed36b;
				--color-dark: #1a1a1a;
				--color-light: #ffffff;
				--color-gray: #666666;
				--font-sans: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
				--font-serif: 'Playfair Display', Georgia, serif;
			}
			
			body {
				font-family: var(--font-sans);
				color: var(--color-dark);
				line-height: 1.6;
				overflow-x: hidden;
			}
			
			/* Header */
			header {
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				z-index: 1000;
				padding: 30px 0;
			}
			
			nav {
				max-width: 1400px;
				margin: 0 auto;
				padding: 0 40px;
				display: flex;
				justify-content: space-between;
				align-items: center;
			}
			
			.logo {
				font-size: 1.5rem;
				font-weight: 700;
				color: var(--color-light);
				text-decoration: none;
				letter-spacing: -0.02em;
			}
			
			.nav-links {
				display: flex;
				gap: 40px;
				list-style: none;
			}
			
			.nav-links a {
				color: var(--color-light);
				text-decoration: none;
				font-weight: 500;
				font-size: 0.95rem;
				transition: color 0.3s ease;
				opacity: 0.9;
			}
			
			.nav-links a:hover {
				opacity: 1;
				color: var(--color-primary);
			}
			
			/* Hero Section */
			.hero {
				min-height: 100vh;
				display: flex;
				align-items: center;
				justify-content: center;
				position: relative;
				background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
				overflow: hidden;
			}
			
			.hero::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%239C92AC" fill-opacity="0.03"%3E%3Cpath d="M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');
				opacity: 0.5;
			}
			
			.hero-content {
				position: relative;
				z-index: 1;
				text-align: center;
				padding: 0 20px;
				max-width: 1200px;
			}
			
			.hero h1 {
				font-family: var(--font-serif);
				font-size: clamp(3rem, 8vw, 6rem);
				font-weight: 700;
				color: var(--color-light);
				line-height: 1.1;
				margin-bottom: 30px;
				letter-spacing: -0.02em;
			}
			
			.hero h1 .accent {
				color: var(--color-primary);
			}
			
			.hero p {
				font-size: clamp(1.1rem, 2vw, 1.4rem);
				color: var(--color-light);
				opacity: 0.8;
				max-width: 700px;
				margin: 0 auto 50px;
				font-weight: 300;
				line-height: 1.6;
			}
			
			/* Buttons */
			.btn {
				display: inline-block;
				padding: 18px 50px;
				background: var(--color-primary);
				color: var(--color-dark);
				text-decoration: none;
				font-weight: 600;
				font-size: 1.1rem;
				border-radius: 50px;
				transition: all 0.3s ease;
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}
			
			.btn:hover {
				transform: translateY(-3px);
				box-shadow: 0 10px 30px rgba(124, 211, 210, 0.4);
				background: #6ab9b8;
			}
			
			.btn-outline {
				background: transparent;
				border: 2px solid var(--color-light);
				color: var(--color-light);
			}
			
			.btn-outline:hover {
				background: var(--color-light);
				color: var(--color-dark);
			}
			
			/* Sections */
			.section {
				padding: 120px 0;
			}
			
			.section-dark {
				background: var(--color-dark);
				color: var(--color-light);
			}
			
			.section-light {
				background: #f8f9fa;
			}
			
			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 40px;
			}
			
			/* Typography */
			h2 {
				font-family: var(--font-serif);
				font-size: clamp(2.5rem, 5vw, 4rem);
				font-weight: 700;
				margin-bottom: 30px;
				letter-spacing: -0.02em;
				line-height: 1.2;
			}
			
			h3 {
				font-family: var(--font-sans);
				font-size: clamp(1.5rem, 3vw, 2rem);
				font-weight: 600;
				margin-bottom: 20px;
				color: var(--color-primary);
			}
			
			p {
				font-size: 1.1rem;
				line-height: 1.8;
				margin-bottom: 20px;
				color: inherit;
			}
			
			/* Cards Grid */
			.grid {
				display: grid;
				gap: 40px;
				margin-top: 60px;
			}
			
			.grid-3 {
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
			}
			
			.grid-2 {
				grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
			}
			
			/* Card Styles */
			.card {
				background: var(--color-light);
				padding: 50px;
				border-radius: 10px;
				box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
				transition: all 0.3s ease;
			}
			
			.card:hover {
				transform: translateY(-10px);
				box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
			}
			
			.card h3 {
				margin-bottom: 20px;
			}
			
			/* Feature Box */
			.feature-box {
				text-align: center;
				padding: 40px;
			}
			
			.feature-box h3 {
				font-size: 1.8rem;
				margin-bottom: 20px;
			}
			
			.feature-box p {
				opacity: 0.8;
			}
			
			/* Footer */
			footer {
				background: var(--color-dark);
				color: var(--color-light);
				padding: 80px 0 40px;
				text-align: center;
			}
			
			footer p {
				opacity: 0.7;
			}
			
			/* Responsive */
			@media (max-width: 768px) {
				.nav-links {
					display: none;
				}
				
				.section {
					padding: 80px 0;
				}
				
				.container {
					padding: 0 20px;
				}
				
				.grid-2,
				.grid-3 {
					grid-template-columns: 1fr;
				}
				
				.card {
					padding: 30px;
				}
			}
		</style>
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-T3RVDSL"
		height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		<!-- End Google Tag Manager (noscript) -->
		
		<header>
			<nav>
				<a href="/" class="logo">WATERLOO TRACK</a>
				<ul class="nav-links">
					<li><a href="/for-agencies">For Agencies</a></li>
					<li><a href="/for-business-owners">For Businesses</a></li>
					<li><a href="/for-marketing-directors">For Directors</a></li>
					<li><a href="/contact">Get Audit</a></li>
				</ul>
			</nav>
		</header>
		
		<slot />
		
		<footer>
			<div class="container">
				<p>&copy; 2025 Waterloo Track. First-party attribution that actually works.</p>
				<p>Stop guessing. Start knowing.</p>
			</div>
		</footer>
	</body>
</html>